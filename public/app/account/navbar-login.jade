.navbar-right(ng-controller="mvNavBarLoginCtrl")
	form.navabar-form.form-inline(ng-hide="identity.isAuthenticated()")
		ul.nav.navbar-nav
			li
				a(ui-sref="signup") Sign up
		.form-group
			input.form-control(placeholder="Имя пользовотеля", ng-model="username")
		.form-group
			input.form-control(placeholder="Пароль", type="password", ng-model="password")
		button.btn.btn-primary(ng-click="signIn(username,password)") Вход
	ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
		li.dropdown
			a.dropdown-toggle(href="", data-toggle="dropdown")
				| {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
				b.caretp
			ul.dropdown-menu
				li(ng-show="identity.currentUser.isAdmin()")
					a(href="/admin/users") User admin
				li
					a(href="/profile" ng-click="updateProfile()") Профиль
				li
					a(href="" ng-click="signOut()") Выход	