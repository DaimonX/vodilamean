.container
	.well
		form.form-horizontal(name="addViolationForm")
			fieldset
				h2 Новое Нарушение
					legend(style="font-size: 16px")
						.form-group
							label.col-md-2.control-label(for="brand") Марка автомобиля
							.col-md-10
								input.form-control(name="brand", type="text", placeholder="марка авто", ng-model="brand", required)
						.form-group
							label.col-md-2.control-label(for="model") Модель автомобиля
							.col-md-10
								input.form-control(name="model", type="text", placeholder="модель авто", ng-model="model")
						.form-group
							label.col-md-2.control-label(for="number") Номерной знак
							.col-md-10
								input.form-control(name="number", type="text", placeholder="номерной знак", ng-model="number", required)
						.form-group
							label.col-md-2.control-label(for="description") Описание нарушения
							.col-md-10
								input.form-control(name="description", type="text", placeholder="описание", ng-model="description", required)
						.form-group
							label.col-md-2.control-label(for="date") Дата проишествия
							.col-md-10
								input.form-control(name="date", type="text", placeholder="дата", ng-model="date", required)
						.form-group
							.col-md-10.col-md-offset-2
								.pull-right
									button.btn.btn-primary(ng-click="createNewViolation()", ng-disabled="addViolationForm.$invalid") Добавить
									| &nbsp;
									a.btn.btn-default(href="/") Отмена